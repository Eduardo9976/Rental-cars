<h1>Novo Fabricante</h1>

<% if @manufacturer.errors.full_messages.any?%>
  <p> Não foi possível salvar, verifique os erros abaixo:</p>
  <%else%>
    <%@manufacturer.errors.full_messages. each do |erro|%>
      <li>erro</li>
    <%end%>  
  <%end%>    


<%=form_for( @manufacturer, local: true) do |f| %>
  <%=f.label :name, 'Nome'%>
  <%=f.text_field (:name) %>
  <%=f.submit('Enviar')%>
<% end %>