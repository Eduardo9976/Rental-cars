<h6>HTML form--new-edit</h6>








<%= form_with(model: @rental, local:true ) do |f|%>
  <div>
    <%= f.label :start_date, 'Data inicial'%>
    <%= f.date_field :start_date %>
  </div>
  <div>  
    <%= f.label :end_date, 'Data final'%>
    <%= f.date_field :end_date %>
  </div>
  <div>
    <%= f.label :car_category_id, 'Categoria' %>
    <%= f.collection_select :car_category_id, @car_categories, :id, :name %>  
  </div>
  <div>
    <%= f.label :customer_id, 'Cliente'%>
    <%= f.collection_select :customer_id, @customers, :id, :name %>
  </div>
  <%= f.submit 'Enviar' %>
<% end %>

