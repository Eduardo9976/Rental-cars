<h6>HTML form - new--edit</h6>

<%= form_with(model: CarModel.new) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :fuel_type %>
    <%= f.text_field :fuel_type %>
  </div>
  <div>
    <%= f.label :motorization %>
    <%= f.text_field :motorization %>
  </div>
  <div>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </div>
  <div>
    <%= f.label :manufacturer_id %>
    <%= f.collection_select(:manufacturer_id, Manufacturer.all, :id, :name) %>
  </div>
  <div>
    <%= f.label :car_category_id %>
    <%= f.collection_select(:car_category_id, CarCategory.all, :id, :name) %>
  </div>
  <%= f.submit 'Enviar'%>
<% end %>  