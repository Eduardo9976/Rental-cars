<h6>HTML index</h6>
<%if @car_models.empty? %>
   <h3>Nenhum modelo de carro cadastrado </h3>
<% end %>


<h1> <%= CarModel.human_attribute_name(:car_model) %> </h1>
<table>
  <thead>
    <tr>
      <th> <%= CarModel.human_attribute_name(:manufacturer) %> </th>
      <th> <%= CarModel.human_attribute_name(:name) %> </th>
      <th> <%= CarModel.human_attribute_name(:category) %> </th>
    </tr>
  </thead>
  <tbody>
  <% @car_models.each do |car_model| %>
    <tr>
      <td><%= car_model.manufacturer.name %></td>
      <td><%= link_to car_model.name, car_model_path(car_model) %></td>
      <td><%= car_model.car_category.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'Cadastrar novo modelo de carro', new_car_model_path %>
<%= link_to  "Voltar", root_path %>
