<h6>HTML Form New--edit</h6>



<%= form_for(@customer , local: true) do |f| %>
  <%= f.label :name, 'Nome:'%>
  <%= f.text_field (:name) %>
  <%= f.label :cpf, 'CPF:'%>
  <%= f.text_field (:cpf) %>
  <%= f.label :email, 'E-mail:'%>
  <%= f.text_field (:email) %>
  <%= f.submit('Enviar') %>
<% end %>