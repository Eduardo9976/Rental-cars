<h6>HTML form New-Edit</h6>


<%= form_with(model: @car, local:true ) do |f| %>
  <div>
    <%= f.label :license_plate, 'Placa' %>
    <%= f.text_field :license_plate%>
  </div>
  <div>
    <%= f.label :color, 'Cor' %>
    <%= f.text_field :color %>
  </div> 
  <div>
    <%= f.label :mileage, 'Quilometragem' %>
    <%= f.number_field :mileage%>
  </div> 
  <div>
    <%= f.label :car_model_id, 'Modelo do carro'%>
    <%= f.collection_select :car_model_id, CarModel.all, :id, :name %>
  </div>
  <%= f.submit 'Enviar' %> 
<%end%>    
